<div>
  <div>
    <h1>
      All vehicles
    </h1>
  </div>
</div>

<hr>

<div class="container mt-5">
    <h2 class="mb-4">Add a new vehicle</h2>
    <form action="/insert_vehicle" method="post">
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="vehicle_id">Vehicle ID</label>
          <input type="text" class="form-control" id="vehicle_id" name="query_vehicle_id" placeholder="Enter a vehicle ID">
        </div>
        <div class="form-group col-md-6">
          <label for="image_url_box">Image URL</label>
          <input type="text" class="form-control" id="image_url_box" name="query_image_url" placeholder="Enter an image URL">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="license_plate">License Plate</label>
          <input type="text" class="form-control" id="license_plate" name="query_license_plate" placeholder="Enter a license plate">
        </div>
        <div class="form-group col-md-6">
          <label for="year_box">Year</label>
          <input type="text" class="form-control" id="year_box" name="query_year" placeholder="Enter a year for the car">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="make_box">Make</label>
          <input type="text" class="form-control" id="make_box" name="query_make" placeholder="Enter the car's make">
        </div>
        <div class="form-group col-md-6">
          <label for="model_box">Model</label>
          <input type="text" class="form-control" id="model_box" name="query_model" placeholder="Enter the car's model">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="color_box">Color</label>
          <input type="text" class="form-control" id="color_box" name="query_color" placeholder="Enter the car's color">
        </div>
        <div class="form-group col-md-6">
          <label for="trips_count_box">Trips count</label>
          <input type="text" class="form-control" id="trips_count_box" name="query_trips_count" placeholder="How many trips has the car been on?">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="jobs_count_box">Jobs count</label>
          <input type="text" class="form-control" id="jobs_count_box" name="query_jobs_count" placeholder="How many jobs have been completed on this car?">
        </div>
      </div>
      <button type="submit" class="btn btn-outline-primary">Create Vehicle</button>
    </form>
  </div>
<hr>

<div>
  <div>
    <table class="table table-hover table-bordered table-striped">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Image
        </th>

        <th>
          Year
        </th>

        <th>
          Color
        </th>

        <th>
          License Plate
        </th>

        <th>
          Trips count
        </th>

        <th>
          Jobs count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_vehicles.each do |a_vehicle| %>
        <tr>
          <td>
            <%= a_vehicle.id %>
          </td>

          <td>
            <%= a_vehicle.name %>
          </td>

          <td>
            <img src="<%= a_vehicle.image %>" style="width:150px;">
          </td>

          <td>
            <%= a_vehicle.year %>
          </td>

          <td>
            <%= a_vehicle.color %>
          </td>

          <td>
            <%= a_vehicle.license_plate %>
          </td>

          <td>
            <%= a_vehicle.trips_count %>
          </td>

          <td>
            <%= a_vehicle.jobs_count %>
          </td>

          <td>
            <%= time_ago_in_words(a_vehicle.created_at) %> ago
          </td>
          <td>
            <%= time_ago_in_words(a_vehicle.updated_at) %> ago
          </td>

          <td>
            <a href="/vehicles/<%= a_vehicle.id %>">
              Show details
            </a>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
