<div>
  <div>
    <h1>
      All vehicles
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new vehicle
    </h2>

    <form action="/insert_vehicle" method="post">
      <div>
        <label for="vehicle_id">
          Vehicle ID
        </label>

        <input type="text" id="vehicle_id" name="query_vehicle_id" placeholder="Enter a vehicle ID">
      </div>

      <div>
        <label for="image_url_box">
          Image URL
        </label>

        <input type="text" id="image_url_box" name="query_image_url" placeholder="Enter an image URL">
      </div>

      <div>
        <label for="license_plate">
          License Plate
        </label>

        <input type="text" id="license_plate" name="query_license_plate" placeholder="Enter a license plate">
      </div>

      <div>
        <label for="year_box">
          Year
        </label>

        <input type="text" id="year_box" name="query_year" placeholder="Enter a year for the car">
      </div>

      <div>
        <label for="make_box">
          Make
        </label>

        <input type="text" id="make_box" name="query_make" placeholder="Enter the car's make">
      </div>

      <div>
        <label for="model_box">
          Model
        </label>

        <input type="text" id="model_box" name="query_model" placeholder="Enter the car's model">
      </div>

      <div>
        <label for="color_box">
          Color
        </label>

        <input type="text" id="color_box" name="query_color" placeholder="Enter the car's color">
      </div>

      <div>
        <label for="trips_count_box">
          Trips count
        </label>

        <input type="text" id="trips_count_box" name="query_trips_count" placeholder="How many trips has the car been on?">
      </div>

      <div>
        <label for="jobs_count_box">
          Jobs count
        </label>

        <input type="text" id="jobs_count_box" name="query_jobs_count" placeholder="How many jobs have been completed on this car?">
      </div>

      <button class="btn btn-outline-primary">Create Vehicle</button>

    </form>
  </div>
</div>

<hr>

<div>
  <div>
    <table class="table table-hover table-bordered table-striped">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Image
        </th>

        <th>
          Year
        </th>

        <th>
          Color
        </th>

        <th>
          License Plate
        </th>

        <th>
          Trips count
        </th>

        <th>
          Jobs count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_vehicles.each do |a_vehicle| %>
        <tr>
          <td>
            <%= a_vehicle.id %>
          </td>

          <td>
            <%= a_vehicle.name %>
          </td>

          <td>
            <img src="<%= a_vehicle.image %>" style="width:250px;">
          </td>

          <td>
            <%= a_vehicle.year %>
          </td>

          <td>
            <%= a_vehicle.color %>
          </td>

          <td>
            <%= a_vehicle.license_plate %>
          </td>

          <td>
            <%= a_vehicle.trips_count %>
          </td>

          <td>
            <%= a_vehicle.jobs_count %>
          </td>

          <td>
            <%= time_ago_in_words(a_vehicle.created_at) %> ago
          </td>
          <td>
            <%= time_ago_in_words(a_vehicle.updated_at) %> ago
          </td>

          <td>
            <a href="/vehicles/<%= a_vehicle.id %>">
              Show details
            </a>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
