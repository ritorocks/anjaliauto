<div>
  <div>
    <h1>
      All jobs
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new job
    </h2>

    <form action="/insert_job" method="post">
  <div class="form-group">
    <label for="trip_id_box">Trip ID</label>
    <input type="text" class="form-control" id="trip_id_box" name="query_trip_id" placeholder="Enter a trip ID">
  </div>

  <div class="form-group">
    <label for="name_box">Job Name</label>
    <select class="custom-select" id="name_box" name="query_name">
      <option selected>Choose...</option>
      <option value="Job1">Check-in</option>
      <option value="Job2">Check-out</option>
      <option value="Job3">Car Detail</option>
      <option value="Job3">Load Childseat</option>
    </select>
  </div>

  <div class="form-group">
    <label for="employee_id_box">Employee ID</label>
    <input type="text" class="form-control" id="employee_id_box" name="query_employee_id" placeholder="Enter an employee ID">
  </div>

  <button type="submit" class="btn btn-primary">Create job</button>
</form>
  </div>
</div>

<hr>

  <!-- Future Jobs Table -->
  <h3>Upcoming Jobs (<%= @future_jobs.count.to_s%>)</h3>

<div>
  <div>
    <table class="table table-hover table-bordered table-striped">
      <tr>

        <th>
          Job ID
        </th>

        <th>
          Reservation #
        </th>

        <th>
          Job Name
        </th>

        <th>
          Employee
        </th>

         <th>
          Employee Image
        </th>
        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

      </tr>

      <% @future_jobs.each do |a_job| %>
        <tr>
          <td>
            <%= a_job.id %>
          </td>

          <td>
            <a href="/trips/<%= a_job.trip.id %>"><%= a_job.trip.turo_reservation_number %></a>
          </td>

          <td>
            <%= a_job.name %>
          </td>

          <td>
            <%= a_job.employee.name %>
          </td>

          <td>
            <img src="<%= a_job.employee.image_url %>" width="50px">
          </td>

          <td>
            <%= time_ago_in_words(a_job.created_at) %> ago
          </td>
          <td>
            <%= time_ago_in_words(a_job.updated_at) %> ago
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
  <!-- Past Jobs Table -->
  <h3>Past Jobs (<%= @past_jobs.count.to_s%>)</h3>

<div>
  <div>
    <table class="table table-hover table-bordered table-striped">
