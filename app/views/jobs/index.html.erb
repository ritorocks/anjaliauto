<div>
  <div>
    <h1>
      All jobs
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new job
    </h2>

    <form action="/insert_job" method="post">
      <div>
        <label for="trip_id_box">
          Trip ID
        </label>

        <input type="text" id="trip_id_box" name="query_trip_id" placeholder="Enter a trip ID">
      </div>

      <div>
        <label for="name_box">
          Job Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="employee_id_box">
          Employee ID
        </label>

        <input type="text" id="employee_id_box" name="query_employee_id">
      </div>

      <button>
        Create job
      </button>
    </form>
  </div>
</div>

<hr>

  <!-- Future Jobs Table -->
  <h3>Upcoming Jobs (<%= @future_jobs.count.to_s%>)</h3>

<div>
  <div>
    <table class="table table-hover table-bordered table-striped">
      <tr>

        <th>
          Job ID
        </th>

        <th>
          Reservation #
        </th>

        <th>
          Job Name
        </th>

        <th>
          Employee
        </th>

         <th>
          Employee Image
        </th>
        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

      </tr>

      <% @future_jobs.each do |a_job| %>
        <tr>
          <td>
            <%= a_job.id %>
          </td>

          <td>
            <%= a_job.trip.turo_reservation_number %>
          </td>

          <td>
            <%= a_job.name %>
          </td>

          <td>
            <%= a_job.employee.name %>
          </td>

          <td>
            <img src="<%= a_job.employee.image_url %>" width="50px">
          </td>

          <td>
            <%= time_ago_in_words(a_job.created_at) %> ago
          </td>
          <td>
            <%= time_ago_in_words(a_job.updated_at) %> ago
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
  <!-- Past Jobs Table -->
