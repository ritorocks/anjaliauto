<div>
  <div>
    <h1>
      Job #<%= @the_job.id %> details
    </h1>

    <div>
      <div>
        <a href="/jobs">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_job/<%= @the_job.id %>">
          Delete job
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_job.name %>
      </dd>

      <dt>
        Status
      </dt>
      <dd>
        <%= @the_job.status %>
      </dd>

      <dt>
        Vehicle
      </dt>
      <dd>
        <%= @the_job.vehicle_id %>
      </dd>

      <dt>
        Employee
      </dt>
      <dd>
        <%= @the_job.employee_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_job.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_job.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit job
    </h2>

    <form action="/modify_job/<%= @the_job.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_job.name %>">
      </div>

      <div>
        <input type="checkbox" id="status_box" name="query_status" value="1" <%= "checked" if @the_job.status %>>

        <label for="status_box">
            Status
        </label>
      </div>

      <div>
        <label for="vehicle_id_box">
          Vehicle
        </label>

        <input type="text" id="vehicle_id_box" name="query_vehicle_id" value="<%= @the_job.vehicle_id %>">
      </div>

      <div>
        <label for="employee_id_box">
          Employee
        </label>

        <input type="text" id="employee_id_box" name="query_employee_id" value="<%= @the_job.employee_id %>">
      </div>

      <button>
        Update job
      </button>
    </form>
  </div>
</div>

<hr>
